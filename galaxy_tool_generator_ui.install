<?php

/**
 * implements hook_install().
 */
function galaxy_tool_generator_ui_install() {
  $menu_link = [
    'menu_name' => 'main-menu',
    'link_title' => 'Sign In/Up',
    'link_path' => 'user',
    'weight' => -50,
  ];
  menu_link_save($menu_link);
  $menu_link = [
    'menu_name' => 'main-menu',
    'link_title' => 'API Keys',
    'link_path' => 'api_keys',
    'weight' => -49,
  ];
  menu_link_save($menu_link);
  $menu_link = [
    'menu_name' => 'main-menu',
    'link_title' => 'Create Tool XML',
    'link_path' => 'node/add/webform',
    'weight' => -48,
  ];
  menu_link_save($menu_link);
  $menu_link = [
    'menu_name' => 'main-menu',
    'link_title' => 'All Galaxy tool XMLs',
    'link_path' => 'all_galaxy_tool_xmls',
    'weight' => -47,
  ];
  menu_link_save($menu_link);
  $menu_link = [
    'menu_name' => 'main-menu',
    'link_title' => 'Publish to Test Tool Shed',
    'link_path' => 'publish_to_test_tool_shed',
    'weight' => -56,
  ];
  menu_link_save($menu_link);
  $menu_link = [
    'menu_name' => 'main-menu',
    'link_title' => 'Publish to Tool Shed',
    'link_path' => 'publish_to_tool_shed',
    'weight' => -45,
  ];
  menu_link_save($menu_link);

  $permissions = [
    'create webform content',
    'edit own webform content',
    'delete own webform content',
    'edit webform components',
    'access overlay',
  ];
  // Anonymous users
  //user_role_grant_permissions(DRUPAL_ANONYMOUS_RID, $permissions);
  // Authenticated users
  user_role_grant_permissions(DRUPAL_AUTHENTICATED_RID, $permissions);

  // delete Home menu_link.
  db_delete('menu_links')
    ->condition('link_title', 'Home')
    ->execute();

  // hide several blocks.
  $blocks = ['navigation', 'login', 'powered-by', 'form'];
  foreach ($blocks as $block) {
    db_update('block')
      ->fields([
        'status' => 0,
      ])
      ->condition('delta', $block)
      ->execute();
  }

  // Add columns to node table for galaxy tool xml info.
  $galaxy_tool_xml = [
    'galaxy_tool_xml_name' => [
      'description' => 'the name of the tool xml file',
      'type' => 'varchar',
      'default' => '',
      'not null' => TRUE,
    ],
    'tool_xml_fid' => [
      'type' => 'int',
      'default' => 0,
      'not null' => TRUE,
    ],
    'tool_xml_uri' => [
      'type' => 'varchar',
      'default' => '',
      'not null' => TRUE,
      'length' => 255,
    ],
    'tool_synopsis' => [
      'type' => 'varchar',
      'default' => '',
      'not null' => TRUE,
      'length' => 255,
    ],
    'tool_description' => [
      'type' => 'text',
      'default' => '',
      'not null' => TRUE,
    ],
    'tool_categories' => [
      'type' => 'varchar',
      'default' => '',
      'not null' => TRUE,
    ],
    'galaxy_tool_xml_node' => [
      'type' => 'int',
      'default' => 0,
      'not null' => TRUE,
    ],
  ];
  db_add_field('node', 'galaxy_tool_xml_name', $galaxy_tool_xml['galaxy_tool_xml_name']);
  db_add_field('node', 'tool_xml_fid', $galaxy_tool_xml['tool_xml_fid']);
  db_add_field('node', 'tool_xml_uri', $galaxy_tool_xml['tool_xml_uri']);
  db_add_field('node', 'tool_synopsis', $galaxy_tool_xml['tool_synopsis']);
  db_add_field('node', 'tool_description', $galaxy_tool_xml['tool_description']);
  db_add_field('node', 'tool_categories', $galaxy_tool_xml['tool_categories']);
  db_add_field('node', 'galaxy_tool_xml_node', $galaxy_tool_xml['galaxy_tool_xml_node']);
}

